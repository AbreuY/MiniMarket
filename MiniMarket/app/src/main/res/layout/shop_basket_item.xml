<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<android.support.v7.widget.CardView
    android:id="@+id/shopBasket.cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="6dp"
    android:layout_marginBottom="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:id="@+id/shopBasket.ivShop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/shopBasket.tvName"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/shopBasket.ivShop"
            android:layout_toEndOf="@+id/shopBasket.ivShop"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="16dp"
            android:singleLine="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/totalProduct"
            android:id="@+id/textView3"
            android:layout_below="@+id/shopBasket.tvName"
            android:layout_alignLeft="@+id/shopBasket.tvName"
            android:layout_alignStart="@+id/shopBasket.tvName"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/shopBasket.tvAmountProduct"
            android:layout_alignTop="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="12dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>