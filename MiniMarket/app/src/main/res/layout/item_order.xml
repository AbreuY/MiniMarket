<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/itemOrder.cardView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/ItemOrder.ivShop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Medium Text"
                android:id="@+id/ItemOrder.tvId"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ItemOrder.ivShop"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="12dp"


                android:layout_marginRight="3dp"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Medium Text"
                android:id="@+id/ItemOrder.tvNameShop"
                android:layout_below="@+id/ItemOrder.tvId"
                android:layout_alignLeft="@+id/ItemOrder.tvId"
                android:layout_alignStart="@+id/ItemOrder.tvId"
                android:layout_toLeftOf="@+id/ItemOrder.ivButton"
                android:layout_toStartOf="@+id/ItemOrder.ivButton"
                android:layout_marginRight="3dp"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/ItemOrder.tvDate"
                android:singleLine="true"
                android:layout_below="@+id/ItemOrder.tvNameShop"
                android:layout_alignLeft="@+id/ItemOrder.tvNameShop"
                android:layout_alignStart="@+id/ItemOrder.tvNameShop" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/ItemOrder.ivButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/TotalPriceOrder"
                android:id="@+id/textView10"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_below="@+id/ItemOrder.tvDate"
                android:layout_alignLeft="@+id/ItemOrder.tvDate"
                android:layout_alignStart="@+id/ItemOrder.tvDate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Medium Text"
                android:id="@+id/ItemOrder.tvPrice"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:layout_toLeftOf="@+id/ItemOrder.tvStatus"
                android:layout_toStartOf="@+id/ItemOrder.tvStatus"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Medium Text"
                android:id="@+id/ItemOrder.tvStatus"
                android:layout_below="@+id/textView10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:singleLine="true"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>