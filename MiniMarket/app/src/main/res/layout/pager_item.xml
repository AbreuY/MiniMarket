<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ratingItem.cardView"
        style="@style/CardView"
        card_view:cardElevation="4dp"
        card_view:cardBackgroundColor="@android:color/white"
        >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="290dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/pagerItem.viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v4.view.ViewPager>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="16dp">
            <ImageView
                android:id="@+id/pagerItem.ivLike"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/heart"/>
            <com.merhold.extensiblepageindicator.ExtensiblePageIndicator
                android:id="@+id/pagerItem.indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorRadius="6dp"
                app:indicatorPadding="2dp"
                app:indicatorInactiveColor="@color/inActiveIndicator"
                app:indicatorActiveColor="@color/activeIndicator"
                android:layout_gravity="bottom"
                android:layout_alignBottom="@+id/pagerItem.ivLike"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pagerItem.ivBack"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/back" />
    </FrameLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>