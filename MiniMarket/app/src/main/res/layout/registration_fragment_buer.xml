<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription=""
            android:scaleType="centerCrop"
            android:src="@drawable/background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="32dp">

            <TextView
                android:id="@+id/registrationFragmentBuer.tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/app_name"
                android:textSize="32sp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/registrationFragmentBuer.frame1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registrationFragmentBuer.linearLayoutTypeAccount"
                android:layout_marginTop="16dp"></FrameLayout>

            <FrameLayout
                android:id="@+id/registrationFragmentBuer.frame2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registrationFragmentBuer.frame1"></FrameLayout>
            <FrameLayout
                android:id="@+id/registrationFragmentBuer.frame3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registrationFragmentBuer.frame2">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/registrationFragmentBuer.frame4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registrationFragmentBuer.frame3">

            </FrameLayout>

            <Button
                android:id="@+id/registrationFragmentBuer.btnRegistration"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_below="@+id/registrationFragmentBuer.frame4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/register"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/registrationFragmentBuer.btnCustomer"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_below="@+id/registrationFragmentBuer.btnRegistration"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/becomeOurCustomer"
                android:textAllCaps="false" />

            <LinearLayout
                android:id="@+id/registrationFragmentBuer.llLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registrationFragmentBuer.btnCustomer"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/haveAnAccount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"

                    android:text="@string/loginUnderline" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/registrationFragmentBuer.progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:id="@+id/registrationFragmentBuer.linearLayoutTypeAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registrationFragmentBuer.tvTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accountType"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/registrationFragmentBuer.tvTypeAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>
</ScrollView>
